<h2>Name: <%= @volunteer.name %></h2>

<h3>Projects:</h3>

  <% if @volunteer.projects %>
    <ul>
      <% @volunteer.projects.each do |project| %>
        <li><a href="/volunteers/<%= @volunteer.id %>/projects/<%= project.id %>"><%= project.title %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no projects listed for this volunteer yet.</p>
  <% end %>

<h4>Add an project:</h4>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
    <label> Project Name
        <input name='project_title' type="text">
    </label>
    <button type="submit">Add Projects</button>
</form>
<form >
  
  <button type="submit" class="btn btn-primary">Delete volunteer</button>
</form>
<p><a href="/volunteers/<%= @volunteer.id %>/edit">Edit volunteer</a></p>
<a href="/projects">Return to projects</a>
