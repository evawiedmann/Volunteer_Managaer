<h4>Project Name: <%= @project.title %></h4>

<h3>Project Volunteers</h3>

  <% if @project.volunteer %>
    <ul>
      <% @project.volunteer.each do |volunteers| %>
        <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteers.id %>"><%= volunteers.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no volunteers listed for this project yet.</p>
  <% end %>

<h4>Add volunteers:</h4>

<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <div class="form-group">
    <label for="volunteer_name">Volunteers name</label>
    <input id="volunteer_name" name="volunteer_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add volunteers</button>
</form>

<!-- Buy Project -->
<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input name="buy" type="hidden">
  <button type="submit" class="btn btn-success">Buy</button>
</form>

<p><a href="/projects/<%= @project.id %>/edit">Edit project</a></p>
<a href="/projects">Return to project list</a>
